{
  "name": "sparrowx-backend",
  "version": "0.1.0",
  "description": "Backend API for SparrowX platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node -e \"const fs = require('fs'); const path = require('path'); const srcDir = 'src/templates'; const destDir = 'dist/templates'; if (fs.existsSync(srcDir)) { fs.mkdirSync(destDir, { recursive: true }); fs.readdirSync(srcDir).forEach(file => { fs.copyFileSync(path.join(srcDir, file), path.join(destDir, file)); }); }\"",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "ts-node src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "ts-node src/db/seed.ts",
    "db:setup": "npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "express",
    "api",
    "multitenant",
    "saas"
  ],
  "author": "SparrowX Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.5.1",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^18.16.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "auth0": "^3.6.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.27.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.1",
    "express-jwt": "^8.4.1",
    "express-oauth2-jwt-bearer": "^1.6.1",
    "express-rate-limit": "^6.9.0",
    "fast-csv": "^5.0.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jwks-rsa": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-cron": "^4.1.0",
    "nodemailer": "^6.9.13",
    "pg": "^8.11.0",
    "pino": "^8.14.1",
    "pino-pretty": "^10.1.0",
    "playwright": "^1.53.0",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.2",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "drizzle-kit": "^0.19.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
